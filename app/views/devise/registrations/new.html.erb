<%= render "shared/second_header" %>

<div class="registration-title">
  新規登録
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
  </div>

  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department, autofocus: true, autocomplete: "email", placeholder: "校務分掌" %>部
  </div>

  <div class="field">
    <%= f.label :grade %><br />
    <%= f.text_field :grade, autofocus: true, autocomplete: "email", placeholder: "所属学年を半角数字で入力してください" %>年
  </div>

  <div class="field">
    <%= f.label :club %><br />
    <%= f.text_field :club, autofocus: true, autocomplete: "email", placeholder: "顧問を担当している部活動" %>部
  </div>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject, autofocus: true, autocomplete: "email", placeholder: "教科" %>科
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
